doctype html
html
  head
    title NoteBlog - Notes
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="../css/dashboard.css")
  body
    .dashboard
      .sidebar
        h2 NoteBlog
        ul.nav
          li
            a(href='/dashboard') Dashboard
          li
            a(href='/dashboard/notes') Notes
          li
            a(href='#') Profile
          li
            a(href='#') Logout
      .main-content
        .header
          h1 Notes
          .user-info
            span 07:37 PM WAT, Aug 02, 2025
            button.profile-btn Profile
        .content
          .cards
            .card
              h3 Create New Note
              p Start writing your thoughts or ideas.
              a(href='/create-note') Go to Create
            .card
              h3 View All Notes
              p Check out your existing notes.
              a(href='/all-notes') Go to All Notes
            .card
              h3 Edit Notes
              p Update or revise your notes.
              a(href='/edit-notes') Go to Edit
